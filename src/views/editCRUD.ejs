<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>edit CRUD</title>
    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="row">
            <form class="row g-3 needs-validation" action="/put-crud" method="post">
                <div class="col-12 mt-3">Edit User's Information</div>
                <div class="col-4">
                    <label for="validationCustom01" class="form-label">First name</label>
                    <input type="text" class="form-control" name="firstName" value="<%= usersInfo.firstName %>">
                </div>
                <div class="col-6">
                    <label for="validationCustom02" class="form-label">Last name</label>
                    <input type="text" class="form-control" name="lastName" value="<%= usersInfo.lastName %>">
                </div>
                <div class="col-12">
                    <label for="validationCustom03" class="form-label">Address</label>
                    <input type="text" class="form-control" name="address" value="<%= usersInfo.address %>">
                </div>
                <div class="col-12">
                    <input type="text" class="form-control" name="id" value="<%= usersInfo.id %> ">
                </div>
                <div class="col-12">
                    <button class="btn btn-primary" type="submit">Update</button>
                </div>
            </form>
        </div>
    </div>
    </div>
</body>

</html>